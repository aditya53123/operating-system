#include <stdio.h>
#include <string.h>

struct File {
    char name[20];
};

int main() {
    struct File files[10];
    int n = 0, choice;
    char fname[20];

    while (1) {
        printf("1.Create 2.Display 3.Search 4.Exit: ");
        scanf("%d", &choice);
        switch (choice) {
            case 1:
                printf("Enter filename: ");
                scanf("%s", files[n].name);
                n++;
                break;
            case 2:
                for (int i = 0; i < n; i++)
                    printf("File %d: %s\n", i+1, files[i].name);
                break;
            case 3:
                printf("Enter filename to search: ");
                scanf("%s", fname);
                for (int i = 0; i < n; i++) {
                    if (strcmp(fname, files[i].name) == 0) {
                        printf("File found.\n");
                        goto next;
                    }
                }
                printf("File not found.\n");
                next: break;
            case 4: return 0;
        }
    }
}
 Single-Level Directory Simulation
