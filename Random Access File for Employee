#include <stdio.h>

struct Employee {
    int id;
    char name[20];
    float salary;
};

int main() {
    struct Employee emp;
    FILE *fp = fopen("employee.dat", "wb+");

    for (int i = 0; i < 2; i++) {
        printf("Enter ID, Name, Salary: ");
        scanf("%d %s %f", &emp.id, emp.name, &emp.salary);
        fwrite(&emp, sizeof(emp), 1, fp);
    }

    printf("Enter record number to read (0/1): ");
    int n;
    scanf("%d", &n);
    fseek(fp, n * sizeof(emp), SEEK_SET);
    fread(&emp, sizeof(emp), 1, fp);
    printf("Read: %d %s %.2f\n", emp.id, emp.name, emp.salary);
    fclose(fp);
    return 0;
}
